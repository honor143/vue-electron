/* flex */
.dis-flex{
    display:flex;
}
/* 公共的页面wrapper */
.bond-info{
    width: 100%;
    height:100%;  
    overflow: hidden;  
}
/* 对齐 */
.align-left{
    text-align: left;
}
.align-center{
    text-align: center;
}
.align-right{
    text-align: right;
}
/* 外边距 */
.marbot5{
    margin-bottom: 5px;
}
.marbot10{
    margin-bottom: 10px;
}
/*内边距 */
.padtop5{
    padding-top:5px;
}
.padright5{
    padding-right:5px;
}
/*modal外边距及样式*/
.modal-wraper{
    padding:10px 0;
    color: #fff;
    text-align: center;
}
/* 模块标题样式 */
h3{
    padding-left: 5px;
    color: #EE8400;
}
h3 span{
    position: absolute;
    right:5px;
    top:2px;
    font-size: 12px;
    color:#2d8cf0;
    cursor: pointer;
}
/* 高亮显示的样式*/
.waring-style{
    color: #EE8400!important;
}
/*省略号*/
.elipse{
    display:inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    vertical-align: middle;
    margin-top:-3px;
}
/* 省略号宽度 */
.wid280{
    width:280px;
}
.wid110{
    width:110px;
}
.wid90{
    width:90px;
}
/* 徽标样式*/
.ivu-badge-count{
    left:-2px;
    top:-5px;
    width: 14px;
    min-width: 14px;
    height: 14px;
    line-height: 14px;
    text-align: center;
    padding: 0;
}
/*模块header*/
.sec-header{
    color: #fff;
    position: relative;
}
.sec-header h3{
    height: 30px;
    line-height: 30px;
    margin-right: 30px;
    display: inline-block;
}
.sec-header .align-center{
    position: absolute;
    top:0;
}
.right-wrapper{
    position: absolute;
    right:8px;
    top:0;
    text-align: right;
}
/* ivu-page */
.ivu-page{
    background-color: rgba(66,66,66,0.1);
    padding: 5px;
}
/* bonddetail 样式 */
.detail-wrpper-sty{
    background-color: rgba(66,66,66,0.1);
    height: 196px;
    margin-top: 9px;
    padding:5px;
}

/* 表格中的select */
.table-wrapper >>> .ivu-table .ivu-table-cell .ivu-select{
    margin: 2px!important;
}
